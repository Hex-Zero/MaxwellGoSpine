# GraphQL schema for Maxwell API (initial user operations)
# Run: go generate ./...

type User {
  id: ID!
  name: String!
  email: String!
  createdAt: String!
  updatedAt: String!
  deletedAt: String
}

type Query {
  users(page: Int, pageSize: Int): [User!]!
  user(id: ID!): User
}

type Mutation {
  createUser(name: String!, email: String!): User!
  updateUser(id: ID!, name: String, email: String): User!
  deleteUser(id: ID!): Boolean!
}
